{
  "name": "developers-social-network",
  "version": "0.0.1",
  "scripts": {
    "start": "nodemon -L --watch src/ --exec ts-node src/index.ts",
    "workers": "nodemon -L --watch src/ --exec ts-node src/worker.ts",
    "lint": "tslint -p tsconfig.json -c tslint.json --type-check src/**/*.ts tests/**/*.ts",
    "test": "mocha -r ts-node/register tests/**/*.spec.ts",
    "test-coverage": "tsc && istanbul cover node_modules/.bin/_mocha dist/tests/**/*.spec.js",
    "migrations-create": "ts-node node_modules/.bin/typeorm migrations:create -n",
    "migrations-run": "ts-node node_modules/.bin/typeorm migrations:run",
    "migrations-revert": "ts-node node_modules/.bin/typeorm migrations:revert",
    "apidoc": "apidoc -i src/ -o static-files/api-doc"
  },
  "pre-commit": [
    "lint"
  ],
  "dependencies": {
    "@sendgrid/mail": "^6.1.2",
    "@types/bcrypt": "^1.0.0",
    "@types/body-parser": "^1.16.5",
    "@types/bookshelf": "^0.9.3",
    "@types/chai": "^4.0.4",
    "@types/express": "^4.0.36",
    "@types/faker": "^4.1.1",
    "@types/joi": "^10.4.1",
