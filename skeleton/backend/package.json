    "@types/mocha": "^2.2.42",
    "@types/mongoose": "^4.7.19",
    "@types/mysql": "^0.0.34",
    "@types/node": "^8.0.24",
    "@types/node_redis": "^0.8.29",
    "@types/redis": "^2.6.0",
    "@types/sinon": "^2.3.3",
    "@types/socket.io": "^1.4.30",
    "@types/winston": "^2.3.3",
    "bcrypt": "^2.0.0",
    "body-parser": "^1.17.2",
    "bookshelf": "^0.10.4",
    "bull": "^3.0.0",
    "chai": "^4.1.1",
    "crypto": "^1.0.1",
    "express": "^4.15.3",
    "faker": "^4.1.0",
    "fast-csv": "^2.4.0",
    "istanbul": "^0.4.5",
    "joi": "^10.6.0",
    "knex": "^0.13.0",
